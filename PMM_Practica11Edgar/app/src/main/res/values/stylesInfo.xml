<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnSpan">3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:text">@string/about</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="estilImgInfo">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/img_info</item>
    </style>

    <style name="estilCheck">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:text">@string/recInfo</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tvsInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>