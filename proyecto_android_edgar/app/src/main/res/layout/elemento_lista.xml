<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="8dp"
    android:background="@color/playersColor"
    >



    <ImageView
        android:id="@+id/imgJugador"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:src="@drawable/img_jugador"
        />
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Jugador"
        android:layout_toRightOf="@+id/imgJugador"

        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#147217"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:layout_marginRight="20dp"
        android:text="NÃºmero"
        android:textSize="20dp"

        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/tvPosicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombre"
        android:layout_toRightOf="@id/imgJugador"
        android:maxLines="1"
        android:text="Posicion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
</RelativeLayout>